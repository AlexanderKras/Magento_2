                <label>General configuration</label>
                <field id="id_webservices" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1" translate="label comment" type="text">
                    <label>ID</label>
                    <comment>ID of your account for La Poste webservices</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="pwd_webservices" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="2" translate="label comment" type="password">
