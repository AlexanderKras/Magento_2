                        <field id="isUsingColiShip">0</field>
                    </depends>
                </field>
                <field id="isUsingInsurance" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="8" translate="label comment" type="select">
                    <label>Use Colissimo Insurance for outward label?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If enabled, each outward label generation will use Colissimo Insurance feature by default.</comment>
                    <depends>
                        <field id="isUsingColiShip">0</field>
                    </depends>
                </field>
                <field id="averagePreparationDelay" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="9" translate="label comment" type="text">
                    <label>Average preparation delay</label>
                    <comment>Your average delay for preparation of a shipment, in days.</comment>
                    <validate>validate-number validate-zero-or-greater</validate>
                    <depends>
                        <field id="isUsingColiShip">0</field>
                    </depends>
                </field>
                <field id="registeredMailLevel" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label comment" type="select">
